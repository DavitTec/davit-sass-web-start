{
  "name": "davit-sass-web-start",
  "version": "0.0.4",
  "description": "A static HTML/CSS/JS boilerplate web design starter template using SASS for styling.",
  "main": "index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "web": "pnpm build:dev; live-server --mount=/:./dist --port=8081 --host=127.0.0.1 --open=index.html --watch=./dist",
    "sass:dev": "sass --watch src/sass/:dist/css/",
    "sass:prod": "sass --style=compressed src/sass/main.sass build/css/main.min.css",
    "build:dev": "sh ./scripts/stage.sh",
    "build:prod": "sh ./scripts/build.sh",
    "clean": "rimraf dist stage build",
    "serve": "live-server --mount=/:./dist --port=8081 --host=127.0.0.1 --open=index.html --watch=./dist --middleware=$(pwd)/middleware/middleware.js --verbose",
    "watch:files": "onchange 'src/**' --exclude 'src/sass/**' -- pnpm build:dev",
    "dev": "pnpm build:dev && concurrently 'pnpm sass:dev' 'pnpm watch:files' 'pnpm serve'"
  },
  "keywords": [
    "web design",
    "styles",
    "html",
    "css",
    "sass"
  ],
  "author": "David Mullins",
  "license": "DAVIT-1.0",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "gh-pages": "^6.3.0",
    "live-server": "^1.2.2",
    "onchange": "^7.1.0",
    "rimraf": "^6.1.2",
    "sass": "^1.96.0"
  }
}
