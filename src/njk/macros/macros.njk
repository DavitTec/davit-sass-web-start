{% macro section(id, content, class='reusable-section') %}

<section id="{{ id }}" class="{{ class }}">
  <p>{{ content }}</p>
</section>
{% endmacro %}

{% macro add(x, y) %}
  {{ caller() }}: {{ x + y }}
{% endmacro %}


{% macro cta(id, className="") %}
<!-- ยง SECTION: {{ id }} -->
<section id="{{ id }}" class="reusable-section {{ className }}">
  <div class="section__container">
    {{ caller() }}
  </div>
</section>
<!-- ยง END SECTION: {{ id }} -->
{% endmacro %}



{% macro button(text, href, class='btn-primary') %}
      <a href="{{ href }}" class="{{ class }}">{{ text }}</a>
{% endmacro %}


{% macro button_cta(label, href, variant="primary") %}
<!-- ยง COMPONENT: button_cta ({{ variant }}) -->
<a href="{{ href }}"
   class="btn btn--{{ variant }}"
   role="button">
  <span class="btn__label">{{ label }}</span>
</a>
<!-- ยง END COMPONENT: button_cta -->
{% endmacro %}



{% macro card(title, image, description) %}
<div class="card">
  <img src="{{ image }}" alt="{{ title }}">
  <h3>{{ title }}</h3>
  <p>{{ description }}</p>
</div>
{% endmacro %}